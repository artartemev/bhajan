// File: schema.prisma (Complete and Correct Version)

// 1. Tells Prisma how to connect to your database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. Tells Prisma to generate the JavaScript client
generator client {
  provider = "prisma-client-js"
}

// 3. Your existing model for Bhajans
model Bhajan {
  id        String  @id @default(cuid())
  title     String
  author    String
  text      String
  chords    String?
  options   String?
  // any other fields you have
}

// 4. The new model for the dictionary
model Word {
  id                 String    @id @default(cuid())
  sourceText         String    @unique // The word itself, for quick lookups
  sourceLanguage     String
  transliteration    String
  russianTranslation String
  englishTranslation String
  spiritualMeaning   String?
  isProperNoun       Boolean
  confidence         String
  createdAt          DateTime  @default(now())
}